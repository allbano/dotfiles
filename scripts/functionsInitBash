updateDotfiles() {
    declare -A MSGS
    MSGS["check"]="Verificando dotfiles..."
    MSGS["update"]="Atualizando repositório de dotfiles..."
    echo "${MSGS["check"]}"
    [[ ! -d "$DOTFILES"  ]] && exit 2
    echo "${MSGS["update"]}"
    cd $DOTFILES
    git pull origin main
    cd $HOME
}
git_current_branch() {\
  git branch --show-current &> /dev/null; \
  [[ "$?" -ne "0" ]] && echo "Este diretório não é um repositório git!" \
  || git branch --show-current | xargs -I BRANCH echo -n BRANCH 
}

activateVenvPython() {
  local VENVS=("$HOME/.py3env/bin/activate" "$HOME/.py3envpypy/bin/activate")
#  source "${VENVS[${1}]}"
  . ${VENVS[$1]}
}

updateHistory() {
  local LOCALPATH="/home/$USER/github/dotfiles/bash/history"
  local UPTODATE="$(date +'%d/%m/%Y às %H:%M:%S')"
  local HISTNAME="$(uname --nodename)-history"
  local UPNAME="$(uname --nodename)-updates"
  if [ -f "$LOCALPATH/$UPNAME" ]; then
    cp -f "$HOME/.bash_history" "$HOME/github/dotfiles/bash/history/$HISTNAME"
    echo "Seu history foi atualizado em $UPTODATE" >> "$LOCALPATH/$UPNAME"
  else
    touch "$LOCALPATH/$UPNAME"
    cp -f "$HOME/.bash_history" "$HOME/github/dotfiles/bash/history/$HISTNAME"
    echo "Seu history foi atualizado em $UPTODATE" >> "$LOCALPATH/$UPNAME"
  fi 
  }
