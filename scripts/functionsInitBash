updateDotfiles() {
    declare -A MSGS
    MSGS["check"]="Verificando dotfiles..."
    MSGS["update"]="Atualizando reposit√≥rio de dotfiles..."
    echo "${MSGS["check"]}"
    [[ ! -d "$DOTFILES"  ]] && exit 2
    echo "${MSGS["update"]}"
    cd $DOTFILES
    git pull origin main
    cd $HOME
}
  
