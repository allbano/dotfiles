# Lista os pacotes 처rf찾os
orphans=$(pacman -Qdtq)

# Lista os Pacotes a serem removidos
echo -e "${orphans//:/\\n}"

# Percorre cada pacote 처rf찾o
for orphan in $orphans; do
  read -p "Remover $orphan? (s/N) " confirm
  if [[ $confirm =~ ^[Ss]$ ]]; then
    sudo pacman -Rs $orphan
  fi
done
