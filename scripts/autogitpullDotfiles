declare -A MSGS
GITDOTFILES="/home/$USER/github/dotfiles"
MSGS["check"]="Verificando dotfiles..."
MSGS["update"]="Atualizando reposit√≥rio de dotfiles..."

echo "${MSGS["check"]}"   && \
[[ -d  "$GITDOTFILES" ]]  && \
echo "${MSGS["update"]}"   && \
cd $GITDOTFILES           && \
git pull && cd $HOME
