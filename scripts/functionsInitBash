# launch(): Open the file/URL with the default application.
launch() {
    
    local args="$@"
		xdg-open "$args" && bg

}

# google(): Open google.com in the default browser, arguments are used as search terms.
google() {
	  local terms;
	  terms="$@"
    echo terms
    terms="$(echo -e ${terms// /+})"
	  launch "https://www.google.com/search?q=${terms}" 
}
_exit_status() {
  case $1 in
    0) return ;;
    *) printf '(%d) ' "$1" ;;
  esac
}


